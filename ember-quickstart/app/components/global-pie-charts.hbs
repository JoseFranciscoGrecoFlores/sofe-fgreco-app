<div class="p-3 shadow rounded" >
  <h3 class="text-center">Distribution by country</h3>
  <div class="row">
    <div class="col">
      <p class="h5 text-primary text-center">Cases</p>
      <canvas {{did-insert this.onCasesChartCreated}} />
    </div>
    <div class="col">
      <p class="h5 text-danger text-center">Deaths</p>
      <canvas {{did-insert this.onDeathChartCreated}} />
    </div>
    <div class="col">
      <p class="h5 text-success text-center">Recovered</p>
      <canvas {{did-insert this.onRecoveredChartCreated}} />
    </div>
  </div>
</div>