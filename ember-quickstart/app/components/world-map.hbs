<div class="p-3 shadow rounded">
  <h3 class="text-center">Map</h3>
  <div class="row justify-content-center">
    <button type="button" class="btn btn-primary mr-1" {{on 'click' (fn this.displayMapForCases)}}>Cases</button>
    <button type="button" class="btn btn-success mr-1" {{on 'click' (fn this.displayMapForRecovered)}}>Recovered</button>
    <button type="button" class="btn btn-danger mr-1" {{on 'click' (fn this.displayMapForDeaths)}}>Deaths</button>
    <button type="button" class="btn btn-warning mr-1" {{on 'click' (fn this.displayMapForCritical)}}>Critical</button>
  </div>
  <div id="chartdiv" class="width-100 mt-2" style="height:400px" {{did-insert this.didCreateMap}} {{will-destroy this.willDestroyMap}}>

  </div>
</div>